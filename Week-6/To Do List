<body>

    <h1>To Do List</h1>

    <div class="content">
        <input type="text" class="todo-input" placeholder="Enter a task">
        <button onclick="addTodo()" class="add-btn">Add Task</button>

        <ul class="todo-list">
            <!-- Tasks appear here only after adding -->
        </ul>
    </div>

    <script>
        const todo_list = document.querySelector('.todo-list');
        const input_box = document.querySelector('.todo-input');

        var todos = []; // Start empty

        function addTodo() {
            var todo_text = input_box.value.trim();
            if(todo_text === "") return;
            todos.push(todo_text);
            input_box.value = "";
            display();
        }

        function deleteTask(index) {
            todos.splice(index, 1);
            display();
        }

        function editTask(index) {
            const newText = prompt("Edit Task:", todos[index]);
            if(newText !== null && newText.trim() !== "") {
                todos[index] = newText.trim();
                display();
            }
        }

        function display() {
            todo_list.innerHTML = "";
            todos.forEach(function(t, i) {
                const todo = document.createElement("li");

                const textDiv = document.createElement("span");
                textDiv.textContent = t;

                const btnDiv = document.createElement("div");

                const editBtn = document.createElement("button");
                editBtn.textContent = "Edit";
                editBtn.onclick = function() {
                    editTask(i);
                };

                const delBtn = document.createElement("button");
                delBtn.textContent = "Delete";
                delBtn.onclick = function() {
                    deleteTask(i);
                };

                btnDiv.appendChild(editBtn);
                btnDiv.appendChild(delBtn);

                todo.appendChild(textDiv);
                todo.appendChild(btnDiv);

                todo_list.appendChild(todo);
            });
        }

        display();
    </script>

</body>
</html>
