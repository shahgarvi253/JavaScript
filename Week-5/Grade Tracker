<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Grade</title>
    <style>
        /* Solid background */
        body {
            font-family: Arial, sans-serif;
            padding: 20px;
            margin: 0;
            background-color: #d0e7ff; /* Light solid background */
        }

        h1 {
            text-align: left;
            font-size: 36px;
            color: #333;
        }

        /* Center-left alignment container */
        .content {
            max-width: 500px;
            margin-left: 50px; /* Slightly shifted from left */
        }

        table {
            margin: 0;
            border-collapse: collapse;
        }

        td {
            padding: 10px;
            font-size: 20px;
        }

        input {
            font-size: 20px;
            padding: 5px;
            width: 250px;
        }

        button {
            font-size: 20px;
            padding: 5px 10px;
            cursor: pointer;
        }

        /* Student result box */
        .student-box {
            font-size: 20px;
            font-weight: bold;
            margin-top: 15px;
            padding: 10px;
            border: 2px solid #4CAF50;
            background-color: #e8f5e9;
            border-radius: 5px;
            width: fit-content;
            min-width: 200px;
        }

        .student-box p {
            margin: 4px 0;
        }
    </style>
